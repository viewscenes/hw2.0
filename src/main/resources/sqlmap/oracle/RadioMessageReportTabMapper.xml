<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="com.hw.mapper.RadioMessageReportTabMapper">

	<resultMap id="RadioMessageReportTab" type="com.hw.domain.po.RadioMessageReportTab">
        <result property="id" column="ID"/>
        <result property="reportTime" column="REPORT_TIME"/>
        <result property="reportDescription" column="REPORT_DESCRIPTION"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
		ID,REPORT_TIME,REPORT_DESCRIPTION
	    ]]>
	</sql>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and oracle -->
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO RADIO_MESSAGE_REPORT_TAB (
        	ID ,
        	REPORT_TIME ,
        	REPORT_DESCRIPTION 
        ) VALUES (
        	#{id} ,
        	#{reportTime} ,
        	#{reportDescription} 
        )
    ]]>
		<!--	
			oracle: order="BEFORE" SELECT sequenceName.nextval AS ID FROM DUAL 
			DB2: order="BEFORE"" values nextval for sequenceName
		<selectKey resultType="java.lang.Long" order="BEFORE" keyProperty="userId">
			SELECT sequenceName.nextval AS ID FROM DUAL 
        </selectKey>
		-->
	</insert>
    
	<update id="update" >
    <![CDATA[
        UPDATE RADIO_MESSAGE_REPORT_TAB SET
	        REPORT_TIME = #{reportTime} ,
	        REPORT_DESCRIPTION = #{reportDescription} 
        WHERE 
	        ID = #{id} 
    ]]>
	</update>

    <delete id="delete">
    <![CDATA[
        DELETE FROM RADIO_MESSAGE_REPORT_TAB WHERE
        ID = #{id} 
    ]]>
    </delete>
    
    <select id="getById" resultMap="RadioMessageReportTab">
		SELECT <include refid="columns" />
	    <![CDATA[
		    FROM RADIO_MESSAGE_REPORT_TAB 
	        WHERE 
		        ID = #{id} 
	    ]]>
	</select>
	
	<sql id="findPage_where">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>	      				
	       <if test="@Ognl@isNotEmpty(id)">
				AND ID = #{id}
			</if>
	       <if test="@Ognl@isNotEmpty(reportTimeBegin)">
				AND REPORT_TIME >= #{reportTimeBegin}
		   </if>
		   <if test="@Ognl@isNotEmpty(reportTimeEnd)">
				AND REPORT_TIME &lt;= #{reportTimeEnd}
		   </if>
	       <if test="@Ognl@isNotEmpty(reportDescription)">
				AND REPORT_DESCRIPTION = #{reportDescription}
			</if>
		</where>
	</sql>
		
    <select id="findPage_count" resultType="long">
        SELECT count(*) FROM RADIO_MESSAGE_REPORT_TAB 
		<include refid="findPage_where"/>
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findPage" resultMap="RadioMessageReportTab">
    	SELECT <include refid="columns" />
	    FROM RADIO_MESSAGE_REPORT_TAB 
		<include refid="findPage_where"/>
		

    </select>

	
</mapper>

